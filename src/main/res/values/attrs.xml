<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GestureLockView">
        <attr name="colorInitInner" format="color" />
        <attr name="colorInitOuter" format="color" />
        <attr name="colorTouch" format="color" />
        <attr name="colorSuccess" format="color" />
        <attr name="colorFailure" format="color" />
        <attr name="columns" format="integer" />
        <attr name="maxTime" format="integer" />
        <attr name="columnWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MBarView">
        <attr name="bgColor" format="color" />
        <attr name="bgColorPopup" format="color" />
        <attr name="bgResourcePopup" format="reference" />

        <attr name="left_iconLeft" format="reference" />
        <attr name="left_iconRight" format="reference" />
        <attr name="left_text" format="reference" />
        <attr name="left_textSize" format="dimension" />
        <attr name="left_textColor" format="color" />
        <attr name="left_desc" format="reference" />
        <attr name="left_descSize" format="dimension" />
        <attr name="left_descColor" format="color" />

        <attr name="middle_iconLeft" format="reference" />
        <attr name="middle_iconRight" format="reference" />
        <attr name="middle_text" format="reference" />
        <attr name="middle_textSize" format="dimension" />
        <attr name="middle_textColor" format="color" />
        <attr name="middle_desc" format="reference" />
        <attr name="middle_descSize" format="dimension" />
        <attr name="middle_descColor" format="color" />

        <attr name="right_textSize" format="dimension" />
        <attr name="right_textColor" format="color" />
        <attr name="right_descSize" format="dimension" />
        <attr name="right_descColor" format="color" />
        <attr name="right1_text" format="reference" />
        <attr name="right1_desc" format="reference" />
        <attr name="right1_iconLeft" format="reference" />
        <attr name="right1_iconRight" format="reference" />
        <attr name="right2_text" format="reference" />
        <attr name="right2_desc" format="reference" />
        <attr name="right2_iconLeft" format="reference" />
        <attr name="right2_iconRight" format="reference" />

        <attr name="more_textSize" format="dimension" />
        <attr name="more_textColor" format="color" />
        <attr name="more_descSize" format="dimension" />
        <attr name="more_descColor" format="color" />
        <attr name="more_dividerColor" format="color" />
        <attr name="more_dividerHeight" format="dimension" />
        <attr name="more_width" format="dimension" />
        <attr name="more_maxHeight" format="dimension" />
        <attr name="more_alpha" format="float" />
        <attr name="more_itemHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <!--是否显示农历-->
        <attr name="show_lunar" format="boolean" />
        <!--是否显示上月和下月-->
        <attr name="show_last_next" format="boolean" />
        <!--是否显示节假日-->
        <attr name="show_holiday" format="boolean" />
        <!--是否显示节气-->
        <attr name="show_term" format="boolean" />
        <!--阳历的日期颜色-->
        <attr name="solar_color" format="color" />
        <!--阳历的日期尺寸-->
        <attr name="solar_size" format="integer" />
        <!--农历的日期颜色-->
        <attr name="lunar_color" format="color" />
        <!--农历的日期尺寸-->
        <attr name="lunar_size" format="integer" />
        <!--节日文字颜色-->
        <attr name="holiday_color" format="color" />
        <!--选中的日期文字颜色-->
        <attr name="choose_color" format="color" />
        <!--选中的日期背景-->
        <attr name="choose_bg" format="reference" />
        <!--单选时切换月份，是否选中上次的日期-->
        <attr name="choose_switch" format="boolean" />
        <!--设置单选、多选-->
        <attr name="choose_type" format="enum">
            <enum name="none" value="0" />
            <enum name="single" value="1" />
            <enum name="multi" value="2" />
            <enum name="series" value="3" />
        </attr>
        <!--开始时间-->
        <attr name="start_date" format="reference" />
        <!--结束时间-->
        <attr name="end_date" format="reference" />
        <!--初始时间-->
        <attr name="init_date" format="reference" />
    </declare-styleable>

    <declare-styleable name="WeekView">
        <!--周的表示形式（x.x.x.x.x.x.x）-->
        <attr name="week_str" format="string" />
        <!--周的文字颜色-->
        <attr name="week_color" format="color" />
        <!--周的文字大小-->
        <attr name="week_size" format="integer" />
    </declare-styleable>

</resources>